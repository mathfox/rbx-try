{
    "compilerOptions": {
        "allowSyntheticDefaultImports": true,
        "downlevelIteration": true,
        "module": "CommonJS",
        "moduleResolution": "Node",
        "noLib": true,
        "forceConsistentCasingInFileNames": true,
        "moduleDetection": "force",
        "strict": true,
        "target": "ESNext",
        "typeRoots": [
            "node_modules/@rbxts"
        ],
        "rootDir": "src",
        "outDir": "out",
        "baseUrl": "./src",
        "declaration": true
    },
    "include": [
        "src"
    ]
}